<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AutoMotiveX" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorAccent">@color/primary</item>
         <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="android:textColorHighlight">@color/textSelectionColor</item>
    </style>

    <style name="Theme.AutoMotiveX" parent="Base.Theme.AutoMotiveX" />

    <style name="BottomNavActiveText" parent="@android:style/TextAppearance.Material">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">11sp</item>
        <item name="android:capitalize">words</item>
    </style>

    <style name="BottomNavInactiveText" parent="@android:style/TextAppearance.Material">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="CustomDatePickerStyle">
        <!-- Change the primary color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="SmallRatingBar" parent="@android:style/Widget.Material.RatingBar">
        <item name="android:minHeight">5dp</item>
        <item name="android:maxHeight">5dp</item>
    </style>



</resources>